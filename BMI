# bmi.py
w = input("Enter weight (kg): ")
h = input("Enter height (m): ")

try:
    w = float(w)
    h = float(h)
    if w <= 0 or h <= 0:
        raise ValueError("Weight and height must be positive numbers.")
except ValueError as e:
    print("Invalid input:", e)
    raise SystemExit(1)

bmi = w / (h ** 2)
print(f"Your BMI is {bmi:.2f}")

if bmi < 18.5:
    print("Underweight")
elif bmi < 25:
    print("Normal weight")
elif bmi < 30:
    print("Overweight")
else:
    print("Obese")
